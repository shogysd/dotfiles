if [[ ${python_version[0]} -ge 3 ]] && [[ ${python_version[1]} -ge 9 ]]; then
    alias jb="${python_bin_path} -m json.tool --no-ensure-ascii --indent 4"
else
    alias jb="${python_bin_path} -m json.tool"
fi

unset python_bin_path
unset python_version



