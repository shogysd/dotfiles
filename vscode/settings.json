{
  // editor
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.folding": true,
  "editor.fontFamily": "'Bitstream Vera Sans Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "indent",
  "editor.inlineSuggest.enabled": true,
  // terminal
  "terminal.external.linuxExec": "xterm",
  "terminal.external.osxExec": "Terminal.app",
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 999999,
  // vs-code終了時にactiveなterminalセッションがあった場合の警告有無
  "terminal.integrated.confirmOnExit": "never",
  // workbench
  "workbench.colorCustomizations": {
    // ステータスバー背景色
    "statusBar.background": "#000000",
    // ステータスバー全面色
    "statusBar.foreground": "#ffffff",
    "statusBar.noFolderBackground": "#000000",
    "statusBar.noFolderForeground": "#ffffff",
    "statusBar.debuggingBackground": "#000000",
    "statusBar.debuggingForeground": "#ffffff",
    // 現在行の背景色
    "editor.lineHighlightBackground": "#383838",
    // 選択範囲の背景色
    "editor.selectionBackground": "#6e6e6e"
  },
  "workbench.editor.enablePreview": false,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.startupEditor": "none",
  // git
  "git.confirmSync": true,
  "git.enabled": true,
  // git diff editor (disable)
  "workbench.editorAssociations": {
    "git-rebase-todo": "default",
    "*.ipynb": "jupyter-notebook"
  },
  // diffEditor
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": false,
  // debug
  "debug.inlineValues": true,
  // extends
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  // window
  "window.openFilesInNewWindow": "off",
  "window.openWithoutArgumentsInNewWindow": "on",
  "window.restoreWindows": "none",
  // files
  "files.autoSave": "onWindowChange",
  "files.autoGuessEncoding": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.hotExit": "off",
  // Compulim.vscode-clock
  // "clock.dateFormat": "\tmmm dd yyyy\tHH:MM\t",
  // jsynowiec.vscode-insertdatestring
  "insertDateString.format": "'Time-stamp: <'YYYY-MM-DD hh:mm:ss ZZZ'>'",
  // rafaelmaiolla.remote-vscode;
  "remote.onstartup": true,
  // ms-vscode.cpptools
  "C_Cpp.clang_format_fallbackStyle": "Google",
  // ms-python.python
  // "python.formatting.provider": "autopep8",
  "python.pythonPath": "/usr/local/bin/python3",
  // bracket-pair-colorizer-2
  "bracket-pair-colorizer-2.forceIterationColorCycle": false,
  "bracket-pair-colorizer-2.forceUniqueOpeningColor": false,
  "bracket-pair-colorizer-2.colorMode": "Consecutive",
  "bracket-pair-colorizer-2.showBracketsInGutter": true,
  // trailing-spaces
  "trailing-spaces.trimOnSave": true,
  // vsintellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // git lens
  "gitlens.hovers.enabled": false,
  // todo-tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "CHANGED",
    "OPTIMIZE",
    "WARNING",
    "ERROR"
  ],
  // code-spell-checker
  "cSpell.diagnosticLevel": "Hint",
  // csv-preview
  "csv-preview.lineNumbers": "ordinal",
  "csv-preview.resizeColumns": "all",
  // macOC
  "terminal.integrated.macOptionIsMeta": true,
  "files.associations": {
    "*.rmd": "markdown"
  },
  // github copilot
  "github.copilot.enable": {
    "*": true,
    "txt": false,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "ini": false
  },
  // languages
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": [
      "document"
    ],
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "gitlens.codeLens.symbolScopes": [
      "!Module"
    ],
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "ms-python.python",
  },
  "[javascript]": {
    // "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "golang.go"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.autoIndent": "advanced",
    "gitlens.codeLens.scopes": [
      "document"
    ]
  },
  "[git-commit]": {
    "editor.rulers": [
      72
    ],
    "workbench.editor.restoreViewState": false
  },
  "[git-rebase]": {
    "workbench.editor.restoreViewState": false
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  }
}
