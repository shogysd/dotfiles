[
  // カーソルの移動
  {
    "key": "ctrl+p",
    "command": "cursorUp",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+n",
    "command": "cursorDown",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+f",
    "command": "cursorRight",
    "when": "textInputFocus"
  },
  {
    "key": "PageDown",
    "command": "cursorRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+b",
    "command": "cursorLeft",
    "when": "textInputFocus"
  },
  {
    "key": "PageUp",
    "command": "cursorLeft",
    "when": "textInputFocus"
  },
  // カーソルの移動 (単語単位)
  {
    "key": "ctrl+shift+f",
    "command": "cursorWordEndRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+b",
    "command": "cursorWordEndLeft",
    "when": "textInputFocus"
  },
  // カーソルの移動 (行単位)
  {
    "key": "ctrl+a",
    "command": "cursorHome",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+e",
    "command": "cursorEnd",
    "when": "textInputFocus"
  },
  // カーソルの移動 (ファイル単位)
  {
    "key": "alt+shift+,",
    "command": "cursorTop",
    "when": "textInputFocus"
  },
  {
    "key": "alt+shift+.",
    "command": "cursorBottom",
    "when": "textInputFocus"
  },
  // 文字の削除
  {
    "key": "ctrl+d",
    "command": "deleteRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+h",
    "command": "deleteLeft",
    "when": "textInputFocus"
  },
  // 文字の削除 (単語単位)
  {
    "key": "ctrl+w",
    "command": "deleteWordLeft",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+h",
    "command": "deleteWordLeft",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+d",
    "command": "deleteWordRight",
    "when": "textInputFocus"
  },
  // 文字の削除 (行単位)
  {
    "key": "ctrl+k",
    "command": "deleteAllRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+k",
    "command": "deleteAllLeft",
    "when": "textInputFocus"
  },
  // 選択
  {
    "key": "alt+p",
    "command": "cursorUpSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+n",
    "command": "cursorDownSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+f",
    "command": "cursorRightSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+b",
    "command": "cursorLeftSelect",
    "when": "textInputFocus"
  },
  // 選択 (行単位)
  {
    "key": "alt+a",
    "command": "cursorHomeSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+e",
    "command": "cursorEndSelect",
    "when": "textInputFocus"
  },
  // 選択 (単語単位)
  {
    "key": "alt+shift+f",
    "command": "cursorWordEndRightSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+shift+b",
    "command": "cursorWordEndLeftSelect",
    "when": "textInputFocus"
  },
  // 選択 (ファイル単位)
  {
    "key": "ctrl+shift+a",
    "command": "editor.action.selectAll",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+a",
    "command": "editor.action.selectAll",
    "when": "textInputFocus"
  },
  // 検索
  {
    "key": "ctrl+s",
    "command": "actions.find",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+r",
    "command": "actions.find",
    "when": "textInputFocus"
  },
  {
    "key": "alt+shift+s",
    "command": "editor.action.startFindReplaceAction",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+r",
    "command": "editor.action.startFindReplaceAction",
    "when": "textInputFocus"
  },
  {
    "key": "alt+shift+5",
    "command": "editor.action.startFindReplaceAction",
    "when": "textInputFocus"
  },
  // copy, paste, cut
  {
    "key": "ctrl+c",
    "command": "editor.action.clipboardCopyAction",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+c",
    "command": "editor.action.clipboardCopyAction",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+v",
    "command": "editor.action.clipboardPasteAction",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+v",
    "command": "editor.action.clipboardPasteAction",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+x",
    "command": "editor.action.clipboardCutAction",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+x",
    "command": "editor.action.clipboardCutAction",
    "when": "textInputFocus"
  },
  // redo, undo
  {
    "key": "ctrl+y",
    "command": "redo",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+z",
    "command": "redo",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+shift+z",
    "command": "redo",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+z",
    "command": "undo",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+z",
    "command": "undo",
    "when": "editorTextFocus"
  },
  // 整形
  {
    "key": "ctrl+]",
    "command": "editor.action.format",
    "when": "editorTextFocus"
  },
  // 保存
  {
    "key": "ctrl+x ctrl+s",
    "command": "workbench.action.files.save",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+x ctrl+shift+s",
    "command": "workbench.action.files.saveWithoutFormatting",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+x ctrl+a",
    "command": "workbench.action.files.saveAll",
    "when": "!terminalFocus"
  },
  // ウィンドウを閉じる
  {
    "key": "ctrl+x ctrl+c",
    "command": "workbench.action.closeWindow",
    "when": "!editorIsOpen && !multipleEditorGroups && !terminalFocus"
  },
  //ターミナルを開く
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new"
  },
  // {
  //  "key": "ctrl+`",
  //  "command": "workbench.action.terminal.new"
  //},
  //{
  //  "key": "ctrl+shift+`",
  //  "command": "workbench.action.terminal.new"
  //},
  // togglePanel を開く/閉じる
  {
    "key": "ctrl+`",
    "command": "workbench.action.togglePanel"
  },
  // togglePanel を最大化/元のサイズに戻す
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  // editorTextFocus に移動
  {
    "key": "ctrl+\\",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorTextFocus"
  },
  // editorTextFocus -> terminal
  {
    "key": "ctrl+shift+\\",
    "command": "workbench.action.terminal.focus",
    "when": "editorTextFocus"
  },
  // cmd + w で vs-code の終了はしない
  {
    "key": "cmd+w",
    "command": "-workbench.action.closeWindow",
    "when": "!editorIsOpen && !multipleEditorGroups"
  },
  // plugin
  {
    "key": "alt+t",
    "command": "insertDateString.insertOwnFormatDateTime",
    "when": "editorTextFocus"
  },
  // csv
  {
    "key": "ctrl+]",
    "command": "rainbow-csv.Align",
    "when": "editorLangId==csv"
  },
  {
    "key": "ctrl+shift+]",
    "command": "csv.preview",
    "when": "editorLangId==csv || editorLangId==tsv"
  },
  //{
  //  "key": "ctrl+shift+]",
  //  "command": "rainbow-csv.RBQL",
  //  "when": "editorLangId==csv"
  //},
  // markdown
  {
    "key": "ctrl+]",
    "command": "markdown.showPreview",
    "when": "editorLangId==markdown && !notebookEditorForcused"
  },
  {
    "key": "ctrl+shift+]",
    "command": "markdown.showPreviewToSide",
    "when": "editorLangId==markdown && !notebookEditorForcused"
  }
]
